{
  "name": "pm-login-electron",
  "version": "1.0.0",
  "description": "Proxy Manager - Antidetect Browser & Automation Platform",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "test:db": "node test-database.js",
    "restart": "node restart-and-test.js"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "bcrypt": "^5.1.1",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.5",
    "fs-extra": "^11.3.3",
    "https-proxy-agent": "^7.0.6",
    "node-machine-id": "^1.1.12",
    "sharp": "^0.33.0",
    "sqlite3": "^5.1.6",
    "systeminformation": "^5.23.0",
    "xlsx": "^0.18.5",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.0",
    "tailwindcss": "^3.4.0"
  },
  "build": {
    "appId": "com.pmlogin.app",
    "productName": "PM Login",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
